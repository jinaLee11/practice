class Solution {
    public int solution(int angle) {
        int answer = 0;
        if(0<angle && angle<90){
            answer = 1;
        } else if (angle == 90){
             answer = 2;
        } else if (90 < angle && angle<180){
            answer = 3;
        } else if (angle == 180){
             answer = 4;
        }
        return answer;
    }
}


/*
처음에는 case문을 사용하려 했으나
case문에는 부등호 사용 불가 !! else-if를 사용하는것이 적절함

class Solution {
    public int solution(int angle) {
        int answer = 0;
        switch (angle){
            case 0<angle && angle<90 :
                answer = 1;
                break;
            case angle == 90 :
                answer = 2;
                break;
            case 90 < angle && angle<180 :
                answer = 3;
                break;
            case angle == 180 :
                answer = 4;
                break;
        }
        return answer;
    }
}
*/
